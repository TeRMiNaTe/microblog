{
    "name": "vdimitrov/microblog",
    "description": "MVC Microblog built with Slim Framework",
    "type": "project",
    "authors": [
        {
            "name": "Vladislav Dimitrov"
        }
    ],
    "require": {
        "slim/slim": "3.*",
        "monolog/monolog": "^3.2",
        "slim/twig-view": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8888 -t public public/index.php",
        "test": "phpunit"
    }
}
